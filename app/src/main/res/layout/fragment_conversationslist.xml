<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/convo_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/convo_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/convo_text_background"
            android:gravity="left"
            android:maxLines="5"
            android:text="Title"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceListItem" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="?android:attr/listDivider"
            android:visibility="visible" />

        <TextView
            android:id="@+id/name_view_conversation_list_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/convo_text_background"
            android:gravity="left"
            android:text="Members"
            android:textAlignment="gravity"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/message_preview_conversation_list_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/convo_text_background"
            android:gravity="left"
            android:text="preview"
            android:textAlignment="gravity"
            android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>
