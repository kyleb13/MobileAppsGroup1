<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/verify_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/verify_fragment_body_text"
        android:layout_width="261dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:text="@string/verify_message_body_text"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryAlpha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verify_fragment_header_text" />

    <TextView
        android:id="@+id/verify_fragment_header_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/verify_message_header_text"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/verify_fragment_button"
        style="@android:style/Widget.Holo.Light.Button.Inset"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimaryAlpha"
        android:text="@string/verify_message_button_text"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verify_fragment_body_text" />
</android.support.constraint.ConstraintLayout>